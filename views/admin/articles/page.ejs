<%- include ('../../partials/homeNavBar.ejs') %>

<body>
    <div class="container">
        <hr>
        <% result.articles.rows.forEach((article) =>{%>
            <div class="card p-3">
                <div class="card-hearder">
                    <h2><%= article.title%></h2>
                </div>
                <div class="card-body">
                    <a href="/<%= article.slug%>" class="btn btn-success">Ler artigo</a>
                </div>
            </div>
            <br>
        <%})%>  
        <div class="row">
            <div class="col col-12">
                <% if(result.page > 2){%>
                    <a href="/articles/page/<%= result.page - 1%>"style="float:lefth"><<< Prev</a>
                <%} else if(result.page == 2) {%>
                    <a href="/" style="float:lefth"><<< Prev</a>

                <%}%>
                <%if(result.next && result.page > 2) {%>
                    <a href="/articles/page/<%= result.page + 1%>"style="float:right">Next >>></a>
                <% } %> 
            </div>
            <hr>
        </div>  
    </div>
</body>
